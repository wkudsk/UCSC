     1	#!/bin/sh
     2	# $Id: catnv,v 1.3 2015-05-28 17:45:06-07 - - $
     3	#
     4	# Concatenate multiple short files into a longer file with
     5	# headers like more but use cat -nv for line numbers.
     6	#
     7	
     8	for file in $*
     9	do
    10	   echo ::::::::::::::::::::::::::::::::
    11	   echo $file
    12	   echo ::::::::::::::::::::::::::::::::
    13	   cat -nv $file
    14	done
